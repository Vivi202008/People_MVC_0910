@model People_MVC.Models.ViewModel.LoginViewModel;
@section styles {
    <link href="~/css/formStyle.css" rel="stylesheet" type="text/css" />
}
@{
}
<div class="login-holder">
    <form asp-action="Login" method="post" class="login-form form">
        <div class="form-group">
            <label for="UserName">Username:</label>
            <input class="form-control" type="text" asp-for="UserName" />
        </div>
        <div class="form-group">
            <label for="Password">Password:</label>
            <input class="form-control" type="password" asp-for="Password" />
        </div>
        <input class="form-control" type="text" asp-for="ReturnUrl" value="@Model.ReturnUrl" hidden />
        <div class="form-group">
            <button class="btn btn-primary" type="submit" value="Login">Login</button>
        </div>
    </form>

    @if (ViewBag.LoginErrorMsg != null)
    {
        <h3 class="form-text text-warning">@ViewBag.LoginErrorMsg</h3>
    }
    <a class="reg-link nav-link text-center" asp-controller="Account"
       asp-action="Register">Register</a>
</div>