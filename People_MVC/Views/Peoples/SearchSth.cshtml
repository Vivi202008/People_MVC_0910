
@model People_MVC.Models.Person;

    <h2>Search Result</h2>

    <form method="post" style="margin: 20px auto">
        <label style="font-size:20px"  class="col-4">Please input something to search</label>
        <input id="searchsth" class="col-4" type="text" name="search" value="" />
        <button type="submit" class="col-2" asp-controller="Peoples" asp-action="SearchSth"> Search</button>
    </form>

    <form>
        <label><a asp-action="Create">Create a new person's record!</a> </label>
    </form>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">PersonId</th>
                <th scope="col">Name</th>
                <th scope="col">TeleNumber</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">PersonLanguages</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var asset in ViewBag.SearchData)
                {
                <tr>
                    <td>@asset.PId</td>
                    <td>@asset.PName</td>
                    <td>@asset.Phone</td>
                    <td>@asset.CityName</td>
                    <td>@asset.CountryName</td>
                    <td>@asset.PLanguages</td>

                    <td>
                        <a class="btn btn-primary" asp-controller="Peoples" asp-action="Edit" asp-route-id="@asset.PId">Edit</a>
                        <a class="btn btn-primary" asp-controller="Peoples" asp-action="DeletePerson" asp-route-id="@asset.PId">Delete</a>
                    </td>

                </tr>
            }
            </tbody>
        </table>

        <label><a class="nav-link" asp-area="" asp-controller="Peoples" asp-action="Index">Back to People List!</a> </label>


